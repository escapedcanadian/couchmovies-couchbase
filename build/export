#!/bin/bash
STARTED=${PWD}
echo "Exporting movie data"
cbexport json -c $CB_ENGINE -u $CB_USER -p $CB_PASSWORD --bucket $CB_MOVIE_BUCKET --format lines -o $DEMO_DIR/data/moviedata.json

cd $DEMO_DIR/data
zip moviedata.zip moviedata.json
rm moviedata.json

echo "Exporting Tweet source data"
cbexport json -c $CB_ENGINE -u $CB_USER -p $CB_PASSWORD --bucket $CB_TWEET_SOURCE_BUCKET --format lines -o $DEMO_DIR/data/tweetsource.json
zip tweetsource.zip tweetsource.json
rm tweetsource.json
echo "Exporting FTS indices"
curl -XGET -H "Content-type:application/json" http://$CB_USER:$CB_PASSWORD@$CB_SERVER:$CB_QUERY_PORT/api/index/movies_autocomplete | jq .indexDef > $DEMO_DIR/indexes/movies_autocomplete.json
curl -XGET -H "Content-type:application/json" http://$CB_USER:$CB_PASSWORD@$CB_SERVER:$CB_QUERY_PORT/api/index/movies_shingle | jq .indexDef > $DEMO_DIR/indexes/movies_shingle.json

cd $STARTED
echo "Export complete"
